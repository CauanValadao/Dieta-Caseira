<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f0f2f5;" 
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="dietacaseira.controller.MenuController"
      prefHeight="500.0" prefWidth="400.0">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
    </padding>

    <Label text="Menu Principal" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="26.0"/>
        </font>
    </Label>
    
    <Label text="O que deseja fazer hoje?" textFill="#7f8c8d">
        <font>
            <Font size="14.0"/>
        </font>
        <VBox.margin>
            <Insets bottom="10.0"/>
        </VBox.margin>
    </Label>

    <GridPane hgap="15.0" vgap="15.0" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="50.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>

        <Button text="ðŸ‘¤ Meu Perfil" onAction="#onPerfilClick" 
                maxWidth="Infinity" prefHeight="80.0"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                GridPane.columnIndex="0" GridPane.rowIndex="0"/>

        <Button text="ðŸ“‹ Minhas Dietas" onAction="#onDietasClick"
                maxWidth="Infinity" prefHeight="80.0"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Button text="âž• Nova Dieta" onAction="#onNovaDietaClick"
                maxWidth="Infinity" prefHeight="80.0"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <Button text="ðŸŽ Ingredientes" onAction="#onIngredientesClick"
                maxWidth="Infinity" prefHeight="80.0"
                style="-fx-background-color: white; -fx-text-fill: #2c3e50; -fx-font-size: 14; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-cursor: hand;"
                GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Button fx:id="btnSair" text="Sair / Logout" onAction="#onSairClick"
            style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-underline: true; -fx-cursor: hand;">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Button>

</VBox>