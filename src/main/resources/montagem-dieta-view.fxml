<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" style="-fx-background-color: #ffffff;"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="dietacaseira.controller.MontagemDietaController"
         prefHeight="800.0" prefWidth="950.0">

      <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
      </padding>

      <Label text="Montagem da Dieta Personalizada" textFill="#2c3e50">
            <font>
                  <Font name="System Bold" size="24.0"/>
            </font>
      </Label>
      
      <Label fx:id="lblPetInfo" text="Pet: [Nome do Pet] | MER: [X.XX Kcal/dia]" 
                 style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #34495e;">
            <VBox.margin>
                  <Insets bottom="10.0"/>
            </VBox.margin>
      </Label>

      <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
            <Label text="Adicionar Ingrediente" style="-fx-font-weight: bold; -fx-font-size: 14;" />

            <GridPane hgap="10.0" vgap="10.0">
                  <Label text="Nome do Ingrediente:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                  <TextField fx:id="txtNomeIngrediente" promptText="Pesquisar..." style="-fx-pref-width: 300;" 
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" />
                  <Button text="Buscar" onAction="#onBuscarIngredienteClick" 
                              style="-fx-background-color: #95a5a6; -fx-text-fill: white;" 
                              GridPane.rowIndex="0" GridPane.columnIndex="2" />
                  
                  <Label text="Ingrediente Selecionado:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                  <Label fx:id="lblIngredienteSelecionado" text="Nenhum" 
                             style="-fx-font-weight: bold; -fx-text-fill: #27ae60;" 
                             GridPane.rowIndex="1" GridPane.columnIndex="1" />
                  
                  <Label text="Quantidade (g):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                  <TextField fx:id="txtQuantidade" promptText="Gramas (Ex: 150.0)" 
                                   GridPane.rowIndex="2" GridPane.columnIndex="1" />

                  <Button text="âž• Adicionar Ã  Dieta" onAction="#onAdicionarItemClick" 
                              style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 200;"
                              GridPane.rowIndex="2" GridPane.columnIndex="2" />
            </GridPane>
      </VBox>
      
      <Label text="Itens Atuais da Dieta" style="-fx-font-weight: bold; -fx-font-size: 14;">
            <VBox.margin>
                  <Insets top="10.0"/>
            </VBox.margin>
      </Label>
      <TableView fx:id="tblItensDieta" VBox.vgrow="ALWAYS" prefHeight="300.0">
            <columns>
                  <TableColumn fx:id="colNome" text="Ingrediente" prefWidth="350.0"/>
                  <TableColumn fx:id="colQuantidade" text="Quantidade (g)" prefWidth="150.0"/>
                  <TableColumn fx:id="colKcal" text="Kcal no Item" prefWidth="150.0"/>
                  <TableColumn fx:id="colAcao" text="AÃ§Ã£o" prefWidth="100.0"/>
            </columns>
            <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
      </TableView>

      <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                  <Label text="Resumo CalÃ³rico:" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                  <Label fx:id="lblTotalKcal" text="Total Kcal na Dieta: 0.00 Kcal" style="-fx-font-weight: bold;" />
                  <Label fx:id="lblStatus" text="Status: Aguardando Montagem..." textFill="#f39c12"/>
            </VBox>

            <Button text="Validar Nutrientes" onAction="#onValidarNutrientesClick" 
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40;" />
            
            <Button text="ðŸ’¾ Salvar Dieta" onAction="#onSalvarDietaClick" 
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 40;"
                        fx:id="btnSalvarDieta" disable="true" />
      </HBox>

      <Button text="Voltar ao Menu" onAction="#onVoltarClick"
                  style="-fx-background-color: transparent; -fx-text-fill: #e74c3c; -fx-underline: true; -fx-cursor: hand;"
                  fx:id="btnVoltarAoMenu">             <VBox.margin>
                  <Insets top="10.0"/>
            </VBox.margin>
      </Button>
</VBox>